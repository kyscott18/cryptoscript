{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "files": {
    "ignore": ["**/node_modules", "CHANGELOG.md", "dist"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
